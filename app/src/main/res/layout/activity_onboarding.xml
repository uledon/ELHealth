<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Onboarding._1_personal_details_fragment"
        android:background="@color/colorBackground">


        <ImageButton
            android:id="@+id/male__image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorAccent4"
            android:src="@drawable/male_logo"
            app:layout_constraintEnd_toStartOf="@+id/female_image_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gender_title" />

        <ImageButton
            android:id="@+id/female_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorAccent"
            android:src="@drawable/female_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/male__image_button"
            app:layout_constraintTop_toBottomOf="@+id/gender_title" />

        <TextView
            android:id="@+id/gender_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="@string/gender_title"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_edit_text" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/what_is_your_name"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/details_title"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/male_text" />

        <TextView
            android:id="@+id/current_fitness_level_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/current_fitness_level_title"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/weight_edit_text" />

        <TextView
            android:id="@+id/current_fitness_goals_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/fitness_goals_title"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/how_achieve_goals_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/how_achieve_goals"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fitness_goals_chipGroup" />

        <TextView
            android:id="@+id/any_knee_problems_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="@color/colorWidget"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="@string/any_knee_problems"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/how_achieve_fitness_chipGroup" />

        <TextView
            android:id="@+id/male_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/male_text"
            android:textAlignment="center"
            android:textColor="@color/textColour"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/male__image_button"
            app:layout_constraintStart_toStartOf="@+id/male__image_button"
            app:layout_constraintTop_toBottomOf="@+id/male__image_button" />

        <TextView
            android:id="@+id/female_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/female_text"
            android:textAlignment="center"
            android:textColor="@color/textColour"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/female_image_button"
            app:layout_constraintStart_toStartOf="@+id/female_image_button"
            app:layout_constraintTop_toBottomOf="@+id/female_image_button" />

        <Button
            android:id="@+id/activity_onboarding_finish_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corners_shape"
            android:backgroundTint="#E4AC02"
            android:text="@string/finish"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/any_knee_problems_chipGroup"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/dob_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="@string/date_of_birth"
            android:inputType="textPersonName"
            android:textColor="@color/textColour"
            android:textColorHint="@color/textColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_title"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:textColor="@color/textColour"
            android:textColorHint="@color/textColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_title" />

        <EditText
            android:id="@+id/height_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="@string/height"
            android:inputType="numberDecimal"
            android:textColor="@color/textColour"
            android:textColorHint="@color/textColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dob_edit_text" />

        <EditText
            android:id="@+id/weight_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:ems="10"
            android:hint="@string/weight"
            android:inputType="numberDecimal"
            android:textColor="@color/textColour"
            android:textColorHint="@color/textColour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_edit_text" />

        <TextView
            android:id="@+id/cm_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="13dp"
            android:text="cm."
            android:textColor="@color/textColour"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/height_edit_text"
            app:layout_constraintTop_toBottomOf="@+id/dob_edit_text" />

        <TextView
            android:id="@+id/kg_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="kg."
            android:textColor="@color/textColour"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/weight_edit_text"
            app:layout_constraintTop_toTopOf="@+id/weight_edit_text" />

        <SeekBar
            android:id="@+id/activity_onboarding_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:max="10"
            android:theme="@style/Widget.AppCompat.SeekBar.Discrete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_current_text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0"
            android:textColor="@color/textColour"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/activity_onboarding_seekBar"
            app:layout_constraintTop_toBottomOf="@+id/activity_onboarding_seekBar" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/textColour"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/activity_onboarding_seekBar"
            app:layout_constraintTop_toBottomOf="@+id/activity_onboarding_seekBar" />

        <TextView
            android:id="@+id/seekBar_current_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/textColour"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/activity_onboarding_seekBar"
            app:layout_constraintStart_toStartOf="@+id/activity_onboarding_seekBar"
            app:layout_constraintTop_toBottomOf="@+id/current_fitness_level_title" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/fitness_goals_chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            android:elevation="20dp"
            app:layout_constraintTop_toBottomOf="@+id/current_fitness_goals_title">
            <com.google.android.material.chip.Chip
                android:id="@+id/lose_fat_chip"
                style="@style/FitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lose_fat"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/build_muscle_chip"
                style="@style/FitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/build_muscle"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/improve_endurance_chip"
                style="@style/FitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/improve_endurance"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/maintain_body_shape"
                style="@style/FitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/maintain_body_shape"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/improve_athletic_skills_chip"
                style="@style/FitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/improve_athletic_skills"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
        </com.google.android.material.chip.ChipGroup>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/how_achieve_fitness_chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/how_achieve_goals_title">

            <com.google.android.material.chip.Chip
                android:id="@+id/using_bodyweight_chip"
                style="@style/HowFitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/using_bodyweight"
                android:textColor="@color/textColour"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/using_gym_equipment_chip"
                style="@style/HowFitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/using_gym_equipment"
                android:textColor="@color/textColour"
                android:textSize="18sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/using_weights_chip"
                style="@style/HowFitnessGoalsChipStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/using_weights"
                android:textColor="@color/textColour"
                android:textSize="18sp" />
        </com.google.android.material.chip.ChipGroup>
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/any_knee_problems_chipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:elevation="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/any_knee_problems_title">
            <com.google.android.material.chip.Chip
                android:id="@+id/im_fine_chip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AnyKneeProblemChipStyle"
                android:text="@string/im_fine"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/no_jumping_chip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AnyKneeProblemChipStyle"
                android:text="@string/no_jumping"
                android:textSize="18sp" />
            <com.google.android.material.chip.Chip
                android:id="@+id/low_impact_chip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AnyKneeProblemChipStyle"
                android:text="@string/low_impact"
                android:textSize="18sp" />
        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>